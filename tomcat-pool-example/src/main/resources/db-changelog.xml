<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


  <changeSet id="create-employee-table" author="employee-service-db">
    <createTable tableName="EMPLOYEE">
      <column name="ID" type="int" autoIncrement="true">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_EMPLOYEE"></constraints>
      </column>
      <column name="FIRST_NAME" type="varchar(30)">
        <constraints nullable="false"></constraints>
      </column>
      <column name="LAST_NAME" type="varchar(30)">
        <constraints nullable="false"></constraints>
      </column>
      <column name="EMAIL" type="varchar(60)">
        <constraints nullable="false"></constraints>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="add-dob-column-in-employee" author="employee-service-db">
    <addColumn tableName="EMPLOYEE">
      <column name="DOB" type="date">
        <constraints nullable="false"></constraints>
      </column>
    </addColumn>
  </changeSet>

  <changeSet id="add-john-doe" author="employee-service-db">
    <insert tableName="EMPLOYEE">
      <column name="FIRST_NAME" value="John"/>
      <column name="LAST_NAME" value="Doe"/>
      <column name="EMAIL" value="john@test.com"/>
      <column name="DOB" value="1988-12-12"/>
    </insert>
  </changeSet>

</databaseChangeLog>